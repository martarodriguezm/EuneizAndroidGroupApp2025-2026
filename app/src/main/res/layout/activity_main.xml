<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/pickamovie"
        android:contentDescription="@string/welcome_image_desc"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonDiscover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discover_movies"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/primaryButton"
        android:textColor="@color/primaryButtonText"

        android:padding="14dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02" />



    <Button
        android:id="@+id/buttonFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_favorites"
        android:backgroundTint="@color/secondaryButton"
        android:textColor="@color/secondaryButtonText"

        android:padding="14dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02" />


</LinearLayout>
